<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgrey"
    android:scrollbars="none"
    tools:context=".ProfileFragment">
    <!--Top Header Layout-->

     <ScrollView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         tools:ignore="NestedScrolling">

         <!--Bootom Cards with sections-->
         <LinearLayout
             android:id="@+id/personalinfo"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingBottom="8dp"
             android:layout_margin="12dp"
             android:orientation="vertical">

             <!--About Me Card-->
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="@drawable/fragment_profile_border_design"
                 android:orientation="vertical"
                 android:padding="16dp">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical">

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content">

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="About"
                             style="@style/TextAppearance.MaterialComponents.Headline6"
                             android:textStyle="bold" />

                         <Space
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_weight="1" />

                     </LinearLayout>

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/aboutMe"
                         android:layout_marginTop="10dp"
                         android:text="About me" />
                 </LinearLayout>

             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="12dp"
                 android:background="@drawable/fragment_profile_border_design"
                 android:gravity="center"
                 android:orientation="horizontal">

                 <TextView
                     android:id="@+id/personalinfobtn"
                     android:layout_width="207dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="2"
                     android:gravity="center|start"
                     android:padding="15dp"
                     android:text="Contest Participated"
                     android:textAllCaps="false"
                     android:textColor="@color/black"
                     style="@style/TextAppearance.MaterialComponents.Subtitle1"
                     android:textStyle="normal" />

                 <LinearLayout
                     android:layout_width="1dp"
                     android:layout_height="match_parent"
                     android:background="@color/lightgrey" />


                 <TextView
                     android:layout_width="100dp"
                     android:layout_height="47dp"
                     android:id="@+id/contestParticipated"
                     android:layout_marginTop="0dp"
                     android:layout_weight="2"
                     android:gravity="center"
                     android:text="10"
                     style="@style/TextAppearance.MaterialComponents.Subtitle1"
                     android:textStyle="normal" />


             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:background="@drawable/fragment_profile_border_design"
                 android:gravity="center|start"
                 android:orientation="horizontal">

                 <TextView
                     android:layout_width="115dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="2"
                     android:gravity="left"
                     android:padding="15dp"
                     android:text="MIC Coins"
                     android:textAllCaps="false"
                     android:textColor="@color/black"
                     android:textSize="14sp"
                     android:textStyle="bold" />

                 <LinearLayout
                     android:layout_width="1dp"
                     android:layout_height="match_parent"
                     android:background="@color/lightgrey" />


                 <TextView

                     android:layout_width="3dp"
                     android:layout_height="47dp"
                     android:id="@+id/micCoins"
                     android:layout_marginTop="0dp"
                     android:layout_weight="2"
                     android:gravity="center"
                     android:text="1000"
                     style="@style/TextAppearance.MaterialComponents.Subtitle1"
                     android:textStyle="normal" />

             </LinearLayout>
             <!--Contact Details-->

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:background="@drawable/fragment_profile_border_design"
                 android:orientation="vertical"
                 android:padding="16dp">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Contact"
                         style="@style/TextAppearance.MaterialComponents.Headline6"
                         android:textStyle="bold" />

                     <Space
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="1" />

                 </LinearLayout>

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="10dp"
                     android:orientation="vertical">

                     <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:gravity="center_vertical"
                         android:paddingRight="8dp">

                         <ImageView
                             android:layout_width="40dp"
                             android:layout_height="40dp"
                             android:background="@drawable/fragment_profile_border_design"
                             android:padding="10dp"
                             android:src="@drawable/ic_account_circle" />

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:id="@+id/phNumber"
                             android:layout_marginLeft="20dp"
                             android:text="phone no"
                             android:textColor="@color/grey"
                             style="@style/TextAppearance.MaterialComponents.Subtitle1"
                             android:layout_marginStart="20dp" />
                     </LinearLayout>

                     <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="10dp"
                         android:gravity="center_vertical"
                         android:paddingRight="8dp">

                         <ImageView
                             android:layout_width="40dp"
                             android:layout_height="40dp"
                             android:background="@drawable/fragment_profile_border_design"
                             android:padding="10dp"
                             android:src="@drawable/ic_account_circle" />

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:id="@+id/email"
                             android:layout_marginLeft="20dp"
                             android:text="email"
                             android:textColor="@color/grey"
                             style="@style/TextAppearance.MaterialComponents.Subtitle1"
                             android:layout_marginStart="20dp" />
                     </LinearLayout>

                     <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="10dp"
                         android:gravity="center_vertical"
                         android:paddingRight="8dp"/>

                 </LinearLayout>
             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:layout_marginBottom="10dp"
                 android:background="@drawable/fragment_profile_border_design"
                 android:gravity="center"
                 android:orientation="horizontal">

                 <TextView

                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="2"
                     android:gravity="left"
                     android:padding="15dp"
                     android:text="Social Links"
                     android:textAllCaps="true"
                     android:textColor="@color/black"
                     style="@style/TextAppearance.MaterialComponents.Subtitle1"
                     android:textStyle="bold" />

                 <LinearLayout
                     android:layout_width="1dp"
                     android:layout_height="match_parent"
                     android:background="@color/lightgrey" />

             </LinearLayout>

             <Button
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/edit"
                 android:background="@drawable/edit_text_background"
                 android:layout_gravity="center"
                 android:text="Edit"
                 android:textColor="@color/black"/>

         </LinearLayout>


     </ScrollView>


</ScrollView>